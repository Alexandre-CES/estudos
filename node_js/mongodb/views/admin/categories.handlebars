<h2>Category list: </h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success">New category</button></a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{name}}</h3>
            <p>{{slug}}</p>
            <small>{{date}}</small> <br>
            <a href="/admin/categories/edit/{{_id}}"><button class="btn btn-success mt-4">Edit category</button></a>
            <form action="/admin/categories/delete" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-2" type="submit">Delete</button>
            </form>
        </div>
    </div>
{{else}}
    <h3 class="mt-4">nenhuma categoria foi encontrada</h3>
{{/each}}